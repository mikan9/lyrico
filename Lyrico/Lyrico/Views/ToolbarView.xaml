<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lyrico.Views.ToolbarView">
    <ContentView.Resources>
        <ResourceDictionary Source="../Resources/DefaultResourceDictionary.xaml"></ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
      <Grid HeightRequest="72" HorizontalOptions="FillAndExpand">
            <BoxView HeightRequest="32" BackgroundColor="#2F2F2F" VerticalOptions="End"/>
            <BoxView HeightRequest="64" WidthRequest="64" CornerRadius="64" HorizontalOptions="Center" BackgroundColor="{StaticResource ForegroundSecondary}" VerticalOptions="End"/>
            <Button HeightRequest="48" 
                    WidthRequest="48" 
                    CornerRadius="48" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" 
                    BackgroundColor="{StaticResource BackgroundSecondary}"
                    FontFamily="FA-S" 
                    FontSize="24" 
                    TextColor="{StaticResource ForegroundSecondary}" 
                    Text="{StaticResource Refresh}"
                />
        </Grid>
  </ContentView.Content>
</ContentView>